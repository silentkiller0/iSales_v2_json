<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:mContext="com.iSales.pages.home.fragment.ProfilFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:gravity="top"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="136dp"
                    android:layout_height="136dp"
                    android:layout_marginTop="33dp"
                    android:layout_gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/iv_user_profile_pic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/default_avatar_client" />
                    <ImageButton
                        android:id="@+id/iv_user_profile_take_pic"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/ic_photo_camera_white_24dp"
                        android:clickable="true"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="6dp">
                    <TextView
                        android:id="@+id/tv_user_profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Romuald YOUMSI"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:id="@+id/tv_user_profile_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Douala, Cameroun"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:divider="@drawable/divider_horizontal"
                    android:showDividers="middle">
                    <LinearLayout
                        android:id="@+id/view_user_profile_moncompte"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:background="@drawable/click_selector"
                        android:gravity="center_vertical"
                        android:padding="12dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_person_black_24dp"
                            android:layout_marginEnd="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/profile_menu_size"
                            android:textStyle="bold"
                            android:text="Mon Compte"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:divider="@drawable/divider_horizontal"
                        android:showDividers="middle">
                        <LinearLayout
                            android:id="@+id/view_user_profile_agenda"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:clickable="true"
                            android:background="@drawable/click_selector"
                            android:gravity="center_vertical"
                            android:padding="12dp">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_event_note_black"
                                android:layout_marginEnd="8dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/profile_menu_size"
                                android:textStyle="bold"
                                android:text="Mon Agenda"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/view_user_profile_parametre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:background="@drawable/click_selector"
                        android:gravity="center_vertical"
                        android:padding="12dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_settings_black_24dp"
                            android:layout_marginEnd="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/profile_menu_size"
                            android:textStyle="bold"
                            android:text="ParamÃ¨tres"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/view_user_profile_synchronisation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:background="@drawable/click_selector"
                        android:gravity="center_vertical"
                        android:padding="12dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_cloud_black_24dp"
                            android:layout_marginEnd="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/profile_menu_size"
                            android:textStyle="bold"
                            android:text="Synchronisation"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/view_user_profile_ticketing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:background="@drawable/click_selector"
                        android:gravity="center_vertical"
                        android:padding="12dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_contact_ticketing"
                            android:layout_marginEnd="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/profile_menu_size"
                            android:textStyle="bold"
                            android:text="Support Ticket"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/view_user_profile_deconnecter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:background="@drawable/click_selector"
                        android:gravity="center_vertical"
                        android:padding="12dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_power_settings_new_black_24dp"
                            android:layout_marginEnd="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/profile_menu_size"
                            android:textStyle="bold"
                            android:text="Se dÃ©connecter"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>
