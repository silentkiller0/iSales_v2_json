<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:id="@+id/view_panier_infos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black_cc"
            android:gravity="center_vertical"
            android:padding="4dp">

            <ImageView
                android:id="@+id/iv_selected_client"
                android:layout_width="@dimen/logo"
                android:layout_height="@dimen/logo"
                android:layout_centerVertical="true"
                android:background="@drawable/default_avatar_client"
                android:elevation="@dimen/login_page_logo_elevation"
                android:foregroundGravity="center" />

            <TextView
                android:id="@+id/tv_selected_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@+id/iv_selected_client"
                android:gravity="start"
                android:text="@string/selectionner_un_client"
                android:textColor="@android:color/white"
                android:textSize="@dimen/ed_search_textsize" />

            <ImageButton
                android:id="@+id/ib_clientsradio_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/tv_selected_categorie"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:foregroundGravity="center"
                android:src="@drawable/ic_arrow_dropdown_white"
                android:visibility="gone"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            android:paddingEnd="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:paddingEnd="4dp">
                <Button
                    android:id="@+id/btn_panier_vider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_delete_black_700_24dp"
                    android:text="@string/vider_le_panier"
                    android:textSize="11sp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"/>
                <Button
                    android:id="@+id/btn_panier_valider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_done_black_24dp"
                    android:text="@string/valider_le_panier"
                    android:enabled="false"
                    android:textSize="11sp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_panier_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:gravity="start"
                android:layout_gravity="start"
                android:text="0 produit(s) dans le panier" />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_panier_produits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="52dp"
            android:scrollbars="vertical"/>

        <ImageView
            android:id="@+id/iv_panier_progress_produits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/img_loading_default"
            android:elevation="@dimen/card_album_elevation" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/view_panier_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/view_panier_infos"
        android:background="@color/black_cc"
        android:layout_alignParentBottom="true"
        android:padding="6dp">
        <Button
            android:id="@+id/btn_panier_commander"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:background="@drawable/bg_primary_corner"
            android:gravity="center"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:text="@string/commander"
            android:textSize="11sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toStartOf="@+id/btn_panier_commander"
            android:layout_alignParentStart="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textSize="14sp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tv_panier_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="185 â‚¬"
                android:textSize="19sp"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>