<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="6dp"
    android:elevation="6dp"
    android:layout_width="146dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/view_productvirtual"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clickable="true"
        android:gravity="center"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="2dp">
        <TextView
            android:id="@+id/tv_productvirtual_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="17sp"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:singleLine="false"
            tools:text="Eau Cristalline 50CL"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="@drawable/divider_horizontal"
            android:layout_marginTop="4dp">
            <TextView
                android:id="@+id/tv_productvirtual_prix_ht"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200 € HT"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/bg_primary_corner"
                android:layout_marginEnd="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"/>

            <TextView
                android:id="@+id/tv_productvirtual_prix_ttc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3500 € TTC"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
