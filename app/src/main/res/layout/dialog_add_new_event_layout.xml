<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Créer un événement"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:padding="20dp"/>

        <EditText
            android:id="@+id/dialog_add_new_event_libelle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Entrer Libellé..."
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/dialog_add_new_event_lieu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Entrer Lieu..."
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <Switch
            android:id="@+id/dialog_add_new_event_journee_st"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Événement sur la(les) journée(s)"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <Switch
            android:id="@+id/dialog_add_new_event_disponible_st"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Votre Disponibilité - Occupé"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:checked="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <ImageButton
                android:id="@+id/dialog_add_new_event_display_startevent_ib"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_access_time_black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Début : "
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/dialog_add_new_event_display_starteventday_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXX xx XXX"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/dialog_add_new_event_display_starteventtime_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X:X XX"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="3">

                <ImageButton
                    android:id="@+id/dialog_add_new_event_display_endevent_ib"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_access_time_black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fin : "
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/dialog_add_new_event_display_endeventday_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXX xx XXX"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/dialog_add_new_event_display_endeventtime_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X:X XX"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

        </LinearLayout>

        <Spinner
            android:id="@+id/dialog_add_new_event_concernclient_sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/dialog_add_new_event_description_et"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Entrer Description..."
            android:inputType="textMultiLine"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/dialog_add_new_event_cancelevent_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Annuler event"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:background="@color/gray"
                android:layout_margin="10dp"
                android:padding="5dp"/>

            <Button
                android:id="@+id/dialog_add_new_event_addevent_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ajouter event"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:background="@color/gray"
                android:layout_margin="10dp"
                android:padding="5dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>